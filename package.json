{
	"name": "sv-shortener",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && test:worker",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.prod.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.prod.json --watch",
		"test": "npm run test:integration && npm run test:unit",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test:worker": "wrangler deploy --dry-run --outdir .wrangler/dist && wrangler pages dev .svelte-kit/cloudflare",
		"deploy:worker": "wrangler deploy --outdir .wrangler/dist"
	},
	"devDependencies": {
		"@cloudflare/kv-asset-handler": "^0.3.2",
		"@picocss/pico": "^2.0.6",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-cloudflare": "^4.4.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@types/uuid": "^9.0.8",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"itty-router": "^5.0.17",
		"miniflare": "^3.20240512.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"typescript": "^5.0.0",
		"uuid": "^9.0.1",
		"vite": "^5.0.3",
		"vite-plugin-env-compatible": "^2.0.1",
		"vitest": "^1.2.0",
		"wrangler": "^3.57.1"
	},
	"type": "module",
	"dependencies": {
		"@cloudflare/workers-types": "^4.20240512.0"
	}
}
